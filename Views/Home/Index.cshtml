@model List<UserViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <h1>Users Table</h1>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="py-3 d-flex gap-2">
        <a class="btn btn-light " href="Home/DownloadPdf">Download PDF</a>
        <a class="btn btn-light " href="Home/DownloadExcel">Download Excel</a>
    </div>
</div>
